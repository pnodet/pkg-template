{
	"name": "pkg-template",
	"version": "1.0.0",
	"description": "Small js package I use to help me to create npm packages",
	"scripts": {
		"lint": "xo --fix",
		"test": "xo && ava && tsd",
		"watch:test": "ava --watch"
	},
	"repository": {
