	"engines": {
		"node": "^12.20.0 || ^14.13.1 || >=16.0.0"
	},
	"files": [
		"index.js",
		"index.d.ts"
	],
	"author": {
		"name": "Paul Nodet",
		"email": "paul.nodet@gmail.com",
		"url": "https://pnodet.com"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/pnxdxt/package-template/issues"
	},
	"homepage": "https://github.com/pnxdxt/package-template#readme",
	"devDependencies": {
		"ava": "^3.15.0",
		"tsd": "^0.17.0",
		"xo": "^0.44.0"
	},
	"xo": {
		"singleQuote": true,
