{
	"name": "pkg-template",
	"version": "0.0.1",
	"description": "Template repository to quickly create npm packages",
	"type": "module",
	"main": "build/main/index.js",
	"typings": "build/main/index.d.ts",
	"module": "build/module/index.js",
	"scripts": {
		"build": "npm run build:main & npm run build:module",
		"build:main": "tsc -p tsconfig.json",
		"build:module": "tsc -p tsconfig.module.json",
		"lint": "xo",
		"fix": "xo --fix",
		"test": "ava && tsd",
		"doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs",
		"doc:json": "typedoc src/ --exclude **/*.spec.ts --json build/docs/typedoc.json",
		"doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
		"watch:build": "tsc -p tsconfig.json -w",
		"watch:test": "ava --watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pnxdxt/pkg-template.git"
	},
	"engines": {
		"node": "^12.20.0 || ^14.13.1 || >=16.0.0"
	},
	"files": [
		"build/main",
		"build/module",
		"!**/*.spec.*",
		"!**/*.json",
		"CHANGELOG.md",
		"LICENSE",
		"README.md"
	],
	"author": {
		"name": "Paul Nodet",
		"email": "paul.nodet@gmail.com",
		"url": "https://pnodet.com"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/pnxdxt/pkg-template/issues"
	},
	"homepage": "https://github.com/pnxdxt/pkg-template#readme",
	"devDependencies": {
		"@ava/typescript": "^1.1.1",
		"ava": "^3.15.0",
		"gh-pages": "^3.2.3",
		"prettier-config-xo": "^2.0.0",
		"typedoc": "^0.22.13",
		"typescript": "^4.4.3",
		"xo": "^0.44.0"
	},
	"keywords": [
		"helper",
		"small",
		"template",
		"javascript"
	],
	"prettier": "prettier-config-xo",
	"xo": {
		"prettier": true
	},
	"ava": {
		"failFast": true,
		"timeout": "60s",
		"typescript": {
			"rewritePaths": {
				"src/": "build/main/"
			}
		},
		"files": [
			"!build/module/**"
		]
	}
}
